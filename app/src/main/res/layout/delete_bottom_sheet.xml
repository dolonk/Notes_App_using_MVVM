<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_margin="7dp"
        android:background="@drawable/delete_indicator_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:text="Are you want to delete\nthis note"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/deleteNoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/delete_no"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:padding="7dp"
        android:text="No"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/deleteYesID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/delete_yes"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:padding="7dp"
        android:text="yes"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>